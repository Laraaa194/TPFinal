<main class="min-vh-90 mt-4 container">
    <div class="d-flex flex-column align-items-center justify-content-center ">
    <div class="form-container-reportar mt-5">
        <div class="form-logo-wrapper">
            <img src="/public/img/LogoSec.png" alt="Logo decorativo" class="form-logo-reportar">
        </div>

        <h2 class="form-title text-center mt-3">Reportar pregunta</h2>

        <div class="pregunta text-center fs-5 mb-4">{{pregunta}}</div>

        <form method="post" action="/Pregunta/guardarReporte">
            <input type="hidden" name="esCorrecta" value="{{esCorrecta}}">
            <p class="mb-3">¿Por qué quieres reportar esta pregunta?</p>

            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="motivo" id="malFormulada" value="1">
                <label class="form-check-label" for="malFormulada">
                    Está mal formulada/No se entiende
                </label>
            </div>

            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="motivo" id="faltasOrtografia" value="2">
                <label class="form-check-label" for="faltasOrtografia">
                    Tiene faltas de ortografía
                </label>
            </div>

            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="motivo" id="respuestaIncorrecta" value="3">
                <label class="form-check-label" for="respuestaIncorrecta">
                    La respuesta es incorrecta
                </label>
            </div>

            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="motivo" id="respuestaIncorrecta" value="4">
                <label class="form-check-label" for="respuestaIncorrecta">
                    Contenido inapropiado
                </label>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="radio" name="motivo" id="otroMotivo" value="5">
                <label class="form-check-label" for="otroMotivo">
                    Otro motivo
                </label>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-enviar px-4 mt-3 mb-1">Enviar reporte</button>
            </div>
        </form>
    </div>
    </div>
</main>