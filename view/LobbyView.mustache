
<main>
    <div class="logout-container">
        <form method="post" action="/TPFinal/login/logOut">
            <button class="logout-btn">Cerrar sesión</button>
        </form>
    </div>

    <div class="container text-center mt-4">

        {{#success}}

            <div class="custom-alert">
                <span class="alert-text">✔️ {{success}}</span>
                <button class="close-btn" onclick="this.parentElement.style.display='none';">✕</button>
            </div>
        {{/success}}
        <div class="d-flex justify-content-center align-items-center mb-2">
            <a href="/TPFinal/Perfil/show" style="text-decoration: none">
                <h1 class="fw-bold text-primary">{{usuario}}</h1>
            </a>
            <div class="score-circle">123</div>
        </div>

        <p class="fw-bold">Últimas partidas</p>

        <div class="mx-auto mb-2 game-box w-75 mt-4"></div>
        <div class="mx-auto mb-2 game-box w-75 mt-4"></div>
        <div class="mx-auto mb-2 game-box w-75 mt-4"></div>
        <div class="mx-auto mb-4 game-box w-75 mt-4"></div>

        <div class="d-flex justify-content-between px-5">
            <a href="/TPFinal/Partida/show">
                <button class="rounded-btn">Iniciar partida</button>
            </a>

            <button class="rounded-btn">Crear pregunta</button>
        </div>
    </div>
</main>
