<main>
    <div class="position-relative text-center d-flex flex-column justify-content-center">
        <button class="cerrarPregunta" onclick="window.history.back()">✖</button>

        <h2 class="fw-bold mb-4">Puntuacion</h2>


        <div class="container" style="max-width: 500px;">
           <div class="pregunta-card bg-white">
                <div class="pregunta-header" style="background-color: {{color_pregunta}}">

                   <h5 class="mb-0">{{pregunta}}</h5>


                </div>
               <form action="/TPFinal/Partida/verificarRespuesta" method="POST">
                   <div class="list-group">
                       {{#respuestas}}
                           <button type="submit" name="respuestaId" value="{{id}}" class="list-group-item list-group-item-action">
                               {{texto}}
                           </button>
                       {{/respuestas}}
                   </div>

                   <input type="hidden" name="preguntaId" value="{{id_pregunta}}">
               </form>

           </div>
       </div>
        <div class="reportarPregunta">
            <button class="btn btn-outline-danger">
                ⚠️ Reportar pregunta
            </button>
        </div>
    </div>
</main>