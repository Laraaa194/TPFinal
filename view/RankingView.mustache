<main>
    <div class="container mt-5">
        <h1 class="text-center text-primary fw-bold mb-5">Ranking</h1>

        <div class="row mt-4">
            <div class="col-md-6">
                <h5 class="text-primary fw-bold">Puntajes Acumulados</h5>
                {{#ranking}}
                    <div class="border rounded px-3 py-2 mb-2 d-flex justify-content-between align-items-center">
                        <a href="/Perfil/verPerfil?usuario={{nombre_usuario}}" class="fw-bold text-success">{{nombre_usuario}}</a>
                        <span class="text-danger fw-bold">{{puntaje}} pts.</span>
                    </div>
                {{/ranking}}
            </div>
            <div class="col-md-6 overflow-auto" style="max-height: 35em;">
                <h5 class="text-primary fw-bold">Partidas jugadas</h5>
                {{#mis_partidas}}
                    <div class="border rounded px-3 py-2 mb-2 d-flex justify-content-between align-items-center">
                        <span class="fw-bold text-pink">TÃº</span>
                        <span class="text-success">+{{puntaje_total}}pts</span>
                    </div>
                {{/mis_partidas}}
            </div>
        </div>
        <div class="text-center mt-3">
            <a href="Lobby/show" class="btn btn-primary">Volver al Lobby</a>
        </div>
    </div>
</main>
