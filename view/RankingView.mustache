
<main>
    <div class="container mt-5 fade-in">
        <h1 class="text-primary text-center fw-semibold text-gradient mb-5">🏆 Ranking</h1>

        <div class="row g-4">
            <!-- Puntajes acumulados -->
            <div class="col-md-6">
                <h5 class="text-secondary fw-semibold mb-3">Top Jugadores</h5>
                <div class="overflow-hidden" style="max-height: 42em;">
                    {{#ranking}}

                        <div class="card shadow-sm border-0 mb-3 fade-in delay-{{@index}}">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center gap-2">
                                    {{#isTop3}}
                                        <span class="medal-icon">{{medalla}}</span>
                                    {{/isTop3}}
                                    <a href="/Perfil/verPerfil?usuario={{nombre_usuario}}" class="ranking-name fw-medium text-decoration-none">
                                    {{nombre_usuario}}
                                    </a>
                                </div>
                                <span class="badge bg-danger-subtle text-danger fw-bold">{{puntaje}} pts</span>
                            </div>
                        </div>
                    {{/ranking}}
                </div>
            </div>

            <!-- Partidas jugadas -->
            <div class="col-md-6">
                <h5 class="text-secondary fw-semibold mb-3">Tus partidas</h5>
                <div class="overflow-hidden" style="max-height: 42em;">
                    {{#mis_partidas}}
                        <div class="card shadow-sm border-0 mb-3 fade-in delay-1">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <span class="fw-medium text-primary">Tú</span>
                                <span class="badge bg-success-subtle text-success fw-semibold">+{{puntaje_total}} pts</span>
                            </div>
                        </div>
                    {{/mis_partidas}}
                </div>
            </div>
        </div>

    </div>
</main>